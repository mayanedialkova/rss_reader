<p id="notice"><%= notice %></p>

<div class="container">
  <h1>
    Listing Feeds
    <%= link_to new_feed_path, class: 'btn btn-primary' do %>
      New
    <% end %>
  </h1>

  <div id='feeds_container'>
    <%= paginate @feeds %>
    <% @feeds.each do |feed| %>
      <h4>
        <div class="row">
          <div class="col-xs-4"><%= feed.name %></div>
          <div class="col-xs-6"><%= feed.url %></div>
          <div class="col-xs-1">
            <%= link_to edit_feed_path(feed), class: 'btn btn-primary' do %>
              Edit
            <% end %>
          </div>
          <div class="col-xs-1">
            <%= link_to feed, method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' do %>
              Delete
            <% end %>
          </div>
        </div>
      </h4>
    <% end %>
    <%= paginate @feeds %>
  </div>
</div>
